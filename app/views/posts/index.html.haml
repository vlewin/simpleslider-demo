%ul#breadcrumb
#simpleslider
  %ul
    %li
      %h3 Posts

      %br

      %table.table
        %tr
          %th Title
          %th Content
          %th

        - @posts.each do |post|
          %tr
            %td= post.title
            %td= post.content
            %td{ :style => 'text-align:right;'}
              = link_to 'Show', post, :class => 'slink', :data => {:id => post.id, :target => "##{post.id}", :title => post.title }

      %br
    %li
      = image_tag 'spinner.gif'
      Please wait ...
